; see http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
charset = utf-8
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 4

[package.xml]
indent_style = space
indent_size = 1

